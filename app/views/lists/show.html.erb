<h2>
List items
</h2>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Duedate</th>
      <th>Status</th>
    </tr>
  </thead>

  <tbody>
<% ListItem.where("List_id = ?", @list.id).each do |li| %>
<tr> 
<td> <%=li.Name%></td>
<td> <%=li.Duedate%></td>
<td> <%=li.Status%></td>
<td><%= link_to 'Edit', edit_list_item_path(li)%></td>
<td><%= link_to 'Destroy', li, method: :delete, data: { confirm: 'Are you sure?' }%></td>
</tr>
<% end %>
  </tbody>
</table>
